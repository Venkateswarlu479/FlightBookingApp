    {
      "DownstreamPathTemplate": "/api/FlightBooking/TicketDetails/{pnrNumber}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 22842
        }
      ],
      "Key": "ticketgetKey",
      "UpstreamPathTemplate": "/TicketDetails/{pnrNumber}",
      "UpstreamHttpMethods": [ "GET" ]
    }
