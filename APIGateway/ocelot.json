        {
          "Host": "localhost",
          "Port": 22842
        }
      ],
      "Key": "ticketKey",
      "UpstreamPathTemplate": "/BookTicket/{bookingDetails}",
      "UpstreamHttpMethods": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/FlightBooking/CancelTicket?pnrNumber",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 22842
        }
      ],
      "Key": "ticketCancelKey",
      "UpstreamPathTemplate": "/CancelTicket?pnrNumber={PNR}",
      "UpstreamHttpMethods": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/FlightBooking/BookingHistory/{emailId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 22842
        }
      ],
      "Key": "historyKey",
