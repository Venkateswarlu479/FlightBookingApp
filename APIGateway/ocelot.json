      "UpstreamHttpMethods": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/AirlineManagement/FlightDetails/{airlineName}/{flightNumber}/{instrumentUsed}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7419
        }
      ],
      "Key": "flightgetKey",
      "UpstreamPathTemplate": "/FlightDetails/{airlineName}/{flightNumber}/{instrumentUsed}",
      "UpstreamHttpMethods": [ "GET" ]
    },

    //Flight Search Service routes
    {
      "DownstreamPathTemplate": "/api/FlightSearch",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5674
        }
      ],
      "Key": "searchKey",
      "UpstreamPathTemplate": "/search/{flightDetailsModel}",
      "UpstreamHttpMethods": [ "POST" ]
    },

    //Flight Booking Service Routes
    {
      "DownstreamPathTemplate": "/api/FlightBooking/BookTicket",
      "DownstreamScheme": "http",
