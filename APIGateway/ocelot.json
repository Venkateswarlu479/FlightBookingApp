{
  "Routes": [
    //Manage Airlines Service routes
    {
      "DownstreamPathTemplate": "/api/AirlineManagement/RegisterAirline",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7419
        }
      ],
      "Key": "airlineRegKey",
      "UpstreamPathTemplate": "/RegisterAirline/{airlineRegistrationModel}",
      "UpstreamHttpMethods": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/AirlineManagement/GetAirlines",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7419
        }
      ],
      "Key": "airlineGetKey",
      "UpstreamPathTemplate": "/GetAirlines",
      "UpstreamHttpMethods": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/AirlineManagement/BlockAirline?airlineName&userName",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7419
        }
      ],
      "Key": "airlineBlockKey",
      "UpstreamPathTemplate": "/BlockAirline?airlineName={name}&userName={user}",
      "UpstreamHttpMethods": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/AirlineManagement/AddOrScheduleFlight",
